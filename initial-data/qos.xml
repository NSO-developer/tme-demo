<config xmlns="http://tail-f.com/ns/config/1.0">
  <qos xmlns="http://com/example/l3vpn">
    <qos-policy>
      <name>BRONZE</name>
      <class>
        <qos-class>BUSINESS-CRITICAL</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>MISSION-CRITICAL</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
      <class>
        <qos-class>REALTIME</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
    </qos-policy>
    <qos-policy>
      <name>SILVER</name>
      <class>
        <qos-class>BUSINESS-CRITICAL</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>MISSION-CRITICAL</qos-class>
        <bandwidth-percentage>25</bandwidth-percentage>
      </class>
      <class>
        <qos-class>REALTIME</qos-class>
        <bandwidth-percentage>10</bandwidth-percentage>
      </class>
    </qos-policy>
    <qos-policy>
      <name>GOLD</name>
      <class>
        <qos-class>BUSINESS-CRITICAL</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
      </class>
      <class>
        <qos-class>MISSION-CRITICAL</qos-class>
        <bandwidth-percentage>25</bandwidth-percentage>
      </class>
      <class>
        <qos-class>REALTIME</qos-class>
        <bandwidth-percentage>20</bandwidth-percentage>
        <priority/>
      </class>
    </qos-policy>
    <qos-class>
      <name>BUSINESS-CRITICAL</name>
      <dscp-value>af21</dscp-value>
      <match-traffic>
        <name>ssh</name>
        <source-ip>any</source-ip>
        <destination-ip>any</destination-ip>
        <port-start>22</port-start>
        <port-end>22</port-end>
        <protocol>tcp</protocol>
      </match-traffic>
    </qos-class>
    <qos-class>
      <name>MISSION-CRITICAL</name>
      <dscp-value>af31</dscp-value>
      <match-traffic>
        <name>call-signaling</name>
        <source-ip>any</source-ip>
        <destination-ip>any</destination-ip>
        <port-start>5060</port-start>
        <port-end>5061</port-end>
        <protocol>tcp</protocol>
      </match-traffic>
    </qos-class>
    <qos-class>
      <name>REALTIME</name>
      <dscp-value>ef</dscp-value>
      <match-traffic>
        <name>voice</name>
        <source-ip>any</source-ip>
        <destination-ip>any</destination-ip>
        <port-start>16348</port-start>
        <port-end>32767</port-end>
        <protocol>udp</protocol>
      </match-traffic>
    </qos-class>
  </qos>
</config>

